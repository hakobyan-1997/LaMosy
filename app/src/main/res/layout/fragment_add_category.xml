<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".fragments.AddCategoryFragment"
    android:orientation="vertical">


    <EditText
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/marginLayoutSize"
        android:background="@drawable/background_edit_text"
        android:padding="@dimen/paddingSize"
        android:textColorHint="@color/md_light_blue_50"
        android:textColor="@color/md_light_blue_50"
        android:textSize="@dimen/mediumTextSize"
        android:hint="@string/category_name" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/default_image"
        android:layout_marginBottom="100dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:textColor="@color/md_light_blue_50"
        android:text="@string/cancel"
        android:background="@drawable/background_button"/>
    <Button
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/md_light_blue_50"
        android:layout_weight="1"
        android:text="@string/add"
        android:background="@drawable/background_button"/>
</LinearLayout>
</LinearLayout>