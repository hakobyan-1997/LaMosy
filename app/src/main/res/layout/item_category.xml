<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/marginLeftSize"
    android:layout_marginTop="@dimen/marginTopSize"
    android:layout_marginRight="@dimen/marginRightSize"
    android:layout_marginBottom="@dimen/marginBottomSize"
    android:elevation="2dp"
    android:padding="@dimen/paddingSize"
    app:cardBackgroundColor="@color/md_cyan_50"
    app:cardCornerRadius="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/category_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginBottom="@dimen/marginBottomSize"
            android:src="@color/md_cyan_50" />

        <TextView
            android:id="@id/category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_image"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/name"
            android:textAlignment="center"
            android:textSize="@dimen/bigTextSize"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>